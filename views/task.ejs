<html>
    <head>
        <title>Tasks Due</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300" rel="stylesheet" type="text/css">
    </head>

    <body>
        <div class="container">
            <h1><%= taskName %></h1>
            <p><a class="card-button" href="/">Back</a></p>
            <div class="row">
                <div class="card">
                    <div>
                        <p class="card-text"><strong>Subject: </strong><%= subject %></p>
                        <p class="card=text"><strong>Due: </strong><%= dueDate %></p>
                        <p class="card-text"><strong>Description: </strong><%= description %></p>
                        <% if (completed) { %>
                            <p class="card-subtitle">Task has been completed</p>
                            <p><a class="card-button" href="/taskComplete/<%= id %>">Set as incomplete</a></p>
                        <% } else if (!completed) { %>
                            <p class="card-subtitle">Task has not been completed</p>
                            <p><a class="card-button" href="/taskComplete/<%= id %>">Set as completed</a></p>
                        <% } %>

                        <p><a class="card-button" href="/removeTask/<%= id %>" onclick="return confirm('Are you sure you want to delete this task?')">Remove Task</a></p>
                    </div>
                </div>
            </div>
            <p><br></p>
        </div>
    </body>
</html>