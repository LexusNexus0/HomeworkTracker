<html>
    <head>
        <title>Tasks Due</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300" rel="stylesheet" type="text/css">
    </head>

    <body>
        <div class="container">
            <h1>My Subjects</h1>
            <p><a class="card-button" href="/">Back</a></p>
            <p><a class="card-button" href="/addSubject">Add a new subject</a> <a class="card-button" href="/removeSubject">Remove a subject</a></p>
            <p class="card-subtitle">Click on the subject to view all tasks in that subject</p>
            
            <div class="card">
                <% subjectsList.forEach(function(subject) { %>
                    <p class="card-subtitle"><a href="/subjectSearch/<%= subject.id %>" style="text-decoration: none;"><%= subject.subject %></a></p>
                <% }) %>
            </div>
            <p><br></p>
        </div>
    </body>
</html>